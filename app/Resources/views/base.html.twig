<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Housekeeper:{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css') }}" />
        <link href="{{ asset('css/all.css') }}" rel="stylesheet" type="text/css"/>
{#        <link href="{{ asset('css/jquery-ui.css') }}" rel="stylesheet" type="text/css"/> #}
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light nav-sidebar-background-color">
            <a class="navbar-brand col-sm-3" href="#">Housekeeper</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <form class="form-inline my-2 my-lg-0 ml-auto flex-nowrap">
                    <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success mx-2 my-2 my-sm-0" type="submit">Search</button>
                </form>
                <ul class="navbar-nav">
{#
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <p>Username: {{ app.user.username }}</p>
{% endif %}
#}
                    {%- if is_granted('IS_AUTHENTICATED_FULLY') -%}
                    <li class="nav-item mx-1">
                      <a class="btn btn-primary btn-outline-primary" href="{{ path('login_signout') }}" title="You are logged in as - {{ app.user.username }}" data-toggle="tooltip" data-placement="bottom">
                          Sign out
                          <span class="fa fa-sign-out-alt"></span>
                      </a>
                    </li>
                    {%- else -%}
                    <li class="nav-item mx-1">
                      <a class="btn btn-primary btn-outline-primary" href="{{ path('login_signin') }}">Sign in
                          <span class="fa fa-sign-in-alt"></span>
                      </a>
                    </li>
                    <li class="nav-item mx-1">
                      <a class="btn btn-primary btn-outline-primary" href="{{ path('login_signup') }}">Sign up
                          <span class="fa fa-user-plus"></span>
                      </a>
                    </li>
                    {%- endif -%}
    {#
                  <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Dropdown
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" href="#">Action</a>
                      <a class="dropdown-item" href="#">Another action</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                  </li>
    #}            
                </ul>
            </div>
        </nav>
    {# MAIN_BODY #}
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-auto px-3 py-2">
                {% include 'sidebar.html.twig' %}
                </div>
                <div class="col-sm">
                    <div class="row">
                        <div class="col-sm-12">
                        {% include 'header.html.twig' %}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                        {% block body %}Main body{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                {% include 'footer.html.twig' %}
                </div>
            </div>
        </div>
    {#  /MAIN_BODY   #}                

        {% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/jquery-3.3.1.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/popper.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
{#        <script type="text/javascript" src="{{ asset('js/jquery-ui.js') }}"></script> #}
        <script>
            (function($){
                $(document).ready(function(){
                    $('.dropdown-toggle').dropdown();
                    $('[data-toggle="tooltip"]').tooltip({ boundary: 'window' });
                })
            })(jQuery);
        </script>
        {% endblock %}
    </body>
</html>
{% extends "login/base.html.twig" %}

{% block title %}AppBundle:Login:Signup{% endblock %}

{% block body_footer %}
<div class="d-flex justify-content-center links">
    <span>Do you have an account already?</span><a href="{{ path('login_signin') }}">Just Sign in</a>
</div>
<div class="d-flex justify-content-center">
    <a href="{{ path('login_forgot_password') }}">Forgot your password?</a>
</div>
{% endblock %}

{% block page_header %}Sign Up{% endblock %}

{% block body %}
{{ form_start(signUpForm) }}
    {{ form_errors(signUpForm) }}
    {{ form_row(signUpForm.email) }}
    {{ form_row(signUpForm.pass) }}
    <div class="form-group">
        <input type="submit" value="Sign up" class="btn btn-primary">
    </div>
    {{ form_rest(signUpForm) }}
{{ form_end(signUpForm) }}
{% endblock %}
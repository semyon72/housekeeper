{% extends "login/base.html.twig" %}

{% block title %}AppBundle:Login:Signin{% endblock %}

{% block page_header %}Sign In{% endblock %}

{% block body_footer %}
<div class="d-flex justify-content-center links">
    <span>Don't have an account?</span><a href="{{ path('login_signup') }}">Sign Up</a>
</div>
<div class="d-flex justify-content-center">
    <a href="{{ path('login_forgot_password') }}">Forgot your password?</a>
</div>
{% endblock %}


{% block body %}
{% if error %}
    <div class="alert alert-danger">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}        

{{ form_start(signInForm) }}
        {{ form_row(signInForm.email) }}
        {{ form_row(signInForm.pass) }}
        {{ form_row(signInForm._remember_me) }}
    <div class="form-group">
        <button type="submit" class="btn btn-success">Login <span class="fa fa-lock"></span></button>
    </div>
    {{ form_rest(signInForm) }}
{{ form_end(signInForm) }}
{% endblock %}